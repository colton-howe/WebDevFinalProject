doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Web App Final
    // Bootstrap
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(type='text/css', rel='stylesheet', href='css/index.css')
  body
    .wrapper
      .header
        img#banner(src='images/top-banner.png', alt='banner')
      nav.navbar.navbar-inverse
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/") UOIT eSports Planner
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
              li
                a(href="#") About Us
              li
                a(href='/contactPage') Contact Us
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | Dropdown
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#') Link 1
                  li.divider(role='separator')
                  li
                    a(href='#') Link 2
                  li.divider(role='separator')
                  li
                    a(href='#') Link 3
              li
                a(href='#') Link 2
            ul.nav.navbar-nav.navbar-right
              li
                button#login.btn.btn-danger(type='button') Login
      .carousel-container
        #myCarousel.carousel.slide(data-ride='carousel')
          // Indicators
          ol.carousel-indicators
            li.active(data-target='#myCarousel', data-slide-to='0')
            li(data-target='#myCarousel', data-slide-to='1')
            li(data-target='#myCarousel', data-slide-to='2')
            li(data-target='#myCarousel', data-slide-to='3')
          // Wrapper for slides
          .carousel-inner(role='listbox')
            .item.active
              img(src='images/carousel/image1.jpg', alt='Image 1')
            .item
              img(src='images/carousel/image2.jpg', alt='Image 2')
            .item
              img(src='images/carousel/image3.jpg', alt='Image 3')
            .item
              img(src='images/carousel/image4.jpg', alt='Image 4')
          // Left and right controls
          a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
          a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
            span.sr-only Next
      #footer
        .wrapper
          div
            | Text and things go in here
            button.btn.btn-info(type='button') Could Add Buttons
            a(href='#') Or maybe a link
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
